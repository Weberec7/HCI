<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:gravity="top|center">


<TextView  
android:id="@+id/feature" 
android:textSize= "35sp" 
android:text="Featuring!" 
android:gravity="center"
android:layout_width="230dip"
android:layout_height="wrap_content" ></TextView>

<ImageView
android:id="@+id/imagelogo"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:src="@drawable/awkg_logo"
android:gravity="center"
/>

<TextView  
android:id="@+id/Venue" 
android:textSize= "15sp" 
android:text="@string/Venue" 
android:gravity="center" 
android:layout_width="fill_parent"
android:background="#99000000" 
android:layout_height="wrap_content"></TextView>

<TextView  
android:id="@+id/date" 
android:textSize= "15sp" 
android:text="@string/date" 
android:gravity="center" 
android:layout_width="fill_parent"
android:background="#99000000"  
android:layout_height="wrap_content"></TextView>

<TextView  
android:text="" 
android:gravity="center" 
android:layout_width="fill_parent" 
android:layout_height="15sp"></TextView>


<Button android:gravity="center" 
android:text="Book a Ticket" 
android:id="@+id/Ticket" 
android:drawableLeft="@drawable/ticket_btn"
android:layout_width="170dip" 
android:layout_height="wrap_content"></Button>

<Button android:gravity="center" 
android:text="More Information" 
android:id="@+id/Info" 
android:drawableLeft="@drawable/information_btn" 
android:layout_width="170dip" 
android:layout_height="wrap_content"></Button>

<Button android:gravity="center" 
android:text="Rate the Band"
android:drawableLeft="@drawable/rate_btn" 
android:id="@+id/ratetheband" 
android:layout_width="170dip" 
android:layout_height="wrap_content"></Button>

<Button android:gravity="center" 
android:text="Facebook Friends"
android:drawableLeft="@drawable/facebook_btn" 
android:id="@+id/Face" 
android:layout_width="170dip" 
android:layout_height="wrap_content"></Button>



</LinearLayout>
